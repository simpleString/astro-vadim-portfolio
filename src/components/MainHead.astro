---
import "../styles/global.css";
const { title = "Вадим Чернышков", description = "Портфолио" } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />

<meta property="og:site_name" content="Вадим Чернышков" />
<meta name="og:title" content="Вадим Чернышков" />
<meta property="og:type" content="website" />
<meta property="og:image" content={`${import.meta.env.SITE}/User.jpg`} />
<meta name="twitter:title" content="Вадим Чернышков" />
<meta property="og:title" content="Вадим Чернышков" />

<title>{title}</title>

<link rel="icon" type="image/svg+xml" href="/logo.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;700;900&display=swap"
  rel="stylesheet"
/>
